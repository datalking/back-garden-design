{
  "name": "back-garden-design-monorepo",
  "version": "1.0.0",
  "description": "themeable and consistent ui components out of the box.",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/datalking/back-garden-ui#readme",
  "repository": "https://github.com/datalking/back-garden-ui",
  "workspaces": [
    "packages/*",
    "site"
  ],
  "scripts": {
    "start": "yarn run storybook",
    "demo": "lerna run --stream --scope back-garden-react demo",
    "storybook": "lerna run --stream --scope back-garden-react storybook",
    "dev": "lerna run --stream --scope back-garden-react dev",
    "build": "lerna run --stream build",
    "clean": "lerna run --stream clean",
    "test": "lerna run --stream test",
    "docs": "lerna run --stream --scope bg-site start",
    "lerna-version-ls": "lerna list -la",
    "lerna-version": "lerna version --no-git-tag-version --no-push -m 'chore: publish'",
    "lerna-publish": "lerna publish --from-package",
    "updatenpm": "syncpack fix-mismatches",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "prettier": "prettier --write '**/*.{ts,tsx,js,jsx,json,css}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": ""
    }
  },
  "keywords": [
    "ui",
    "components"
  ],
  "author": "jinyaoo <jinyaoo@qq.com>",
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-numeric-separator": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@types/node": "^12.12.47",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "@webpack-cli/serve": "^1.0.1-alpha.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-alloy": "^3.7.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-mdx": "^1.7.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "prettier-eslint": "^11.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "typescript": "^3.9.5",
    "webpack": "^5.0.0-beta.17",
    "webpack-cli": "^4.0.0-beta.8",
    "webpack-dev-server": "^3.11.0",
    "yarn": "^1.22.4"
  },
  "dependencies": {}
}
