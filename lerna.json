{
  "packages": [
    "packages/*",
    "site"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "**/story.js",
        "**/story.tsx",
        "**/__tests__/**",
        "*.test.js",
        "*.test.ts",
        "*.test.tsx",
        "**/__snapshots__/**",
        "**/examples/**"
      ]
    }
  }
}